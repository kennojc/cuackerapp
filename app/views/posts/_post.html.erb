
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%= post.user.photolink%>" alt="User Profile Pic">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h6 class="card-title"><%= link_to post.user.username, user_posts_path( post.user ) %> </h6>
        <p class="card-text"><%= post.content %></p>
      </div>
    </div>
  </div>
</div>